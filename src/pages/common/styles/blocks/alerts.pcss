    &__text {
        width: 258px;
    }

    &__btns {
        display: flex;
        justify-content: space-between;
    }

    &__select {
        width: 170px;
        /* arrow.svg */
        background-image: url("data:image/svg+xml,%3Csvg viewBox='0 0 11 8' version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink'%3E%3Cg id='Artboard' stroke='none' stroke-width='1' fill='none' fill-rule='evenodd' transform='translate(-156.000000, -138.000000)' opacity='0.336786685'%3E%3Cpolyline id='Triangle' stroke='%231D1D1D' stroke-width='1.5' transform='translate(161.147461, 141.429688) rotate(-180.000000) translate(-161.147461, -141.429688) ' points='156.665039 143.945332 161.147461 138.914043 161.147461 138.914043 165.629883 143.945332'%3E%3C/polyline%3E%3C/g%3E%3C/svg%3E%0A");
        background-size: 10px 8px;
        background-position: 153px 17px;
        background-repeat: no-repeat;
        text-align-last:center;
        @mixin select-reset;

        @mixin bnt-white;
    }

    &__btn {
        display: block;
        width: 170px;
        @mixin ellipsis;

        @mixin bnt-white;

        &:active {
            background-color: var(--green5B);
            color: var(--white-color);
        }
    }
}
