.alert {
    display: none;
    position: fixed;
    top: 8px;
    right: 48px;
    width: 390px;
    background-color: var(--white-color);
    padding: 45px 20px 20px;
    box-shadow: var(--grey-shadow);

    &:after {
        content: "â–²";
        position: absolute;
        right: -9px;
        top: 7px;
        transform: rotate(90deg) scaleY(0.7);
        color: var(--white-color);
    }

    &--show {
        display: block;
    }

    &__close {
        @mixin close-btn;
    }

    &__in {
        display: flex;
        align-items: center;
        margin-bottom: 35px;
    }

    &__ico {
        margin-right: 20px;

